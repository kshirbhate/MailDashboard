
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="main">
        <div class="container">
            <div id="loginbox" class="col-md-12  col-sm-12">
                <h2>Change Password</h2>
                <hr />
                @if (ViewBag.IsError == true)
                {
                    <div class="alert alert-danger">
                        @ViewBag.Message
                    </div>
                }

                @if (ViewBag.IsSuccess == true)
                {
                    <div class="alert alert-success">
                        @ViewBag.Message
                    </div>
                }

                <label for="password">Old Password</label>
                <br />
                <input id="login-password" type="password" name="OldPassword">
                <br />
                <label for="password">New Password</label>
                <br />
                <input id="login-password" type="password" name="Password">
                <br />
                <label for="password">Confirm Password</label>
                <br />
                <input id="login-change-password" type="password" name="ConfirmPassword">
                <br />
                <input class="btn btn-primary" type="submit" name="doChangeOldPassword" value="Change" />
            </div>

            <div class="clearfix"></div>
        </div>

    </div>
}

