                                <tr>
                                    <th>Sr No.</th>
                                    <th>Email Id</th>
                                    <th>Count</th>
                                </tr>
                            </thead>

                            <tbody>
                                @for (int i = 0; i < Model.DailySenderList.Count; i++)
                                {
                                    var count = i + 1;
                                    <tr>
                                        <td>@count</td>
                                        <td>@Model.DailySenderList[i].From</td>
