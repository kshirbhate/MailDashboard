@using MVCHackathon.Areas.Dashboard.Models
@model MVCHackathon.Areas.Dashboard.Models.DashboardModel
@{
    ViewBag.Title = "OutgoingInternalReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="main">
        <div class="container">
            <div id="loginbox" class="col-md-12  col-sm-12">
                <h2>Incoming Internal Mails Report</h2>
                <hr />

                <div class="top-10-section col-lg-12 col-md-12">
                    <div class="mailbox-sub-title top-10-section-label" id="mailbox-sub-title">Today's Top 10</div>
                    <table id="table-data-collection-pagination1" class="table table-striped table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th id="first-header-column">View</th>
                                <th>From</th>
                                <th>To</th>
                                <th>Subjet</th>
                                <th>Date</th>
                            </tr>
                        </thead>

                        <tbody>
                            @for (int i = 0; i < Model.DailyList.Count; i++)
                            {
                                <tr>
                                    <td>
                                        <a href='@Url.Action("DetailMail", "MailBox", new { area = "MailBox", MailId = Model.DailyList[i].MailId })'>View</a>
                                    </td>
                                    <td>@Model.DailyList[i].From</td>
                                    <td>@Model.DailyList[i].To</td>
                                    <td>@Model.DailyList[i].Subject</td>
                                    <td>@Model.DailyList[i].InsertTimeStamp</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="top-10-section col-lg-12 col-md-12">
                    <div class="mailbox-sub-title top-10-section-label" id="mailbox-sub-title">Weekly Top 10</div>
                    <table id="table-data-collection-pagination2" class="table table-striped table-bordered" width="100%" cellspacing="0">
