@using MVCHackathon.Areas.Mailbox.Models
@model MVCHackathon.Areas.Mailbox.Models.MailModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Index";
}
 

@using (Html.BeginForm())
{
    <div class="main">
    <div class="container">        
        <div id="loginbox" class="col-md-12  col-sm-12">
            <h2>Mail Box</h2>
            <hr />

            <div class="col-lg-1 col-md-1">
                <div class="sidenav">
                    <a class="activelink" href='@Url.Action("Index", "Mailbox", new { area = "Mailbox"})'>Inbox</a>
                    <a href='@Url.Action("SentMail", "Mailbox", new { area = "Mailbox"})'>Sent</a>
                    <a href='@Url.Action("DraftMail", "Mailbox", new { area = "Mailbox"})'>Drafts</a>
                    <a href='@Url.Action("SpamMail", "Mailbox", new { area = "Mailbox"})'>Spam</a>
                    
                </div>
            </div>
            
            <div class="col-lg-11 col-md-11">
                <div class="mailbox-sub-title" id="mailbox-sub-title">@Model.MailBoxSubTitle</div>
                <table id="table-data-collection-pagination" class="table table-striped table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th id="first-header-column">From</th>
                            <th>Subjet</th>
                            <th>Time</th>
                        </tr>
                    </thead>

                    <tbody>                        
                        @for (int i = 0; i < Model.List.Count; i++)
                        {
                            <tr>
                                <td>
                                    <a href='@Url.Action("DetailMail", "MailBox", new { area = "MailBox", MailId = Model.List[i].MailId })'>@Model.List[i].From</a>
                                </td>
                                <td>@Model.List[i].Subject</td>
                                <td>@Model.List[i].InsertTimeStamp</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            

            </div>

            <div class="clearfix"></div>
        </div>

    </div>
    
}